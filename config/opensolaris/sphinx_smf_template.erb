<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='application/matchbox-ultrasphinx'>
  <service name='application/matchbox-ultrasphinx' type='service' version='0'>
    <create_default_instance enabled='true'/>
    <single_instance/>
    <exec_method name='start' type='method' exec="/opt/local/bin/rake ultrasphinx:daemon:start RAILS_ENV=production" timeout_seconds='60'>
      <method_context working_directory='<%= working_directory %>'>
			<method_credential user="root" group="root"/>
        <method_environment>
          <envvar name='PATH' value='/opt/local/bin:/opt/local/sbin:/usr/xpg4/bin:/usr/sbin:/usr/bin:/usr/sfw/bin:/usr/ccs/bin:/usr/openwin/bin'/>
				  <envvar name='RAILS_ENV' value='production'/>
        </method_environment>
      </method_context>
    </exec_method>
    <exec_method name='stop' type='method' exec="/opt/local/bin/rake ultrasphinx:daemon:stop RAILS_ENV=production" timeout_seconds='60'>
      <method_context working_directory='<%= working_directory %>'>
			<method_credential user="root" group="root"/>
        <method_environment>
          <envvar name='PATH' value='/opt/local/bin:/opt/local/sbin:/usr/xpg4/bin:/usr/sbin:/usr/bin:/usr/sfw/bin:/usr/ccs/bin:/usr/openwin/bin'/>
				  <envvar name='RAILS_ENV' value='production'/>
        </method_environment>
      </method_context>
    </exec_method>
    <exec_method name='restart' type='method' exec="/opt/local/bin/rake ultrasphinx:daemon:restart RAILS_ENV=production" timeout_seconds='60'>
      <method_context working_directory='<%= working_directory %>'>
			<method_credential user="root" group="root"/>
        <method_environment>
          <envvar name='PATH' value='/opt/local/bin:/opt/local/sbin:/usr/xpg4/bin:/usr/sbin:/usr/bin:/usr/sfw/bin:/usr/ccs/bin:/usr/openwin/bin'/>
				  <envvar name='RAILS_ENV' value='production'/>
        </method_environment>
      </method_context>
    </exec_method>
    <stability value='Unstable'/>
    <template>
      <common_name>
        <loctext xml:lang='C'>Production ultrasphinx daemon for matchbox</loctext>
      </common_name>
    </template>
  </service>
</service_bundle>