<% content_for(:title) do -%>
	<h1><%=h @product.name %></h1>
<% end -%>

<% content_for(:main) do -%>
	<p>
	  <b>Keywords:</b>
	  <%=h @product.keywords %>
	</p>
<% end -%>

<% content_for(:sidebar) do -%>
	<div class="actions">
		<%= link_to 'Edit', edit_product_path(@product) %> | <%= link_to 'Destroy', @product, :confirm => 'Are you sure?', :method => :delete %>
		<br/><br/>
		<%= link_to 'Back', products_path %>
	</div>
<% end -%>
