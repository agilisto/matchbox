<% content_for(:title) do -%>
	<h1><%=h @product.name %></h1>
<% end -%>

<% content_for(:main) do -%>
  <strong>Keywords:</strong><br/>
	<%= simple_format(sanitize(@product.keywords)) %>
	<strong>Ad copy:</strong> <%=h @product.ad_copy %><br/
	<strong>Link:</strong> <%= link_to @product.link, @product.link if @product.link %><br/>
	<strong>Link text:</strong> <%=h @product.link_text %>
  
<% end -%>

<% content_for(:sidebar) do -%>
	<div class="actions">
		<%= link_to 'Edit', edit_product_path(@product) %> | <%= link_to 'Destroy', @product, :confirm => 'Are you sure?', :method => :delete %>
		<br/><br/>
		<%= link_to 'Back', products_path %>
	</div>
<% end -%>
